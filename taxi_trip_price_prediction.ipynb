import pandas as pd
import numpy as np
import math
from matplotlib import pyplot as plt
from sklearn.model_selection import train_test_split
from sklearn.neighbors import KNeighborsRegressor
from sklearn.metrics import mean_squared_error, r2_score

# Load dataset
ds = pd.read_csv("taxi_trip_pricing.csv")

ds1 = ds.select_dtypes(include=[np.number])

# Handle missing values
ds1.loc[ds1["Trip_Distance_km"].isna(), "Trip_Distance_km"] = ds1["Trip_Distance_km"].mean()
ds1.loc[ds1["Passenger_Count"].isna(), "Passenger_Count"] = ds1["Passenger_Count"].mean()
ds1.loc[ds1["Base_Fare"].isna(), "Base_Fare"] = ds1["Base_Fare"].mean()
ds1.loc[ds1["Per_Km_Rate"].isna(), "Per_Km_Rate"] = ds1["Per_Km_Rate"].mean()
ds1.loc[ds1["Per_Minute_Rate"].isna(), "Per_Minute_Rate"] = ds1["Per_Minute_Rate"].mean()
ds1.loc[ds1["Trip_Duration_Minutes"].isna(), "Trip_Duration_Minutes"] = ds1["Trip_Duration_Minutes"].mean()
ds1.loc[ds1["Trip_Price"].isna(), "Trip_Price"] = ds1["Trip_Price"].mean()

# Plot dataset statistics
plt.figure(figsize=(8, 5))
for i in ds1.describe().columns:
    plt.plot(ds1.describe().loc[:, i], label=i)

plt.legend()
plt.title("Dataset Feature Statistics")
plt.show()

# Split dataset into features (X) and target (y)
x = ds1.iloc[:, :-1]
y = ds1.iloc[:, -1]

# Train-test split (80% training, 20% testing)
xtrain, xtest, ytrain, ytest = train_test_split(x, y, test_size=0.2)

# Train KNN Regression Model
model = KNeighborsRegressor(n_neighbors=5)
model.fit(xtrain, ytrain)

# Predict on test set
ypred = model.predict(xtest)

# Plot sizes of train and test sets
labels = ["xtrain", "xtest", "ytrain", "ytest"]
values = [xtrain.shape[0], xtest.shape[0], ytrain.shape[0], ytest.shape[0]]

plt.figure(figsize=(6, 4))
plt.bar(labels, values, color=["green", "red", "blue", "orange"])
plt.xlabel("Dataset Split")
plt.ylabel("Number of Samples")
plt.title("Train-Test Split Distribution")
plt.show()

# Calculate mse and rmse
mse = (mean_squared_error(ytest, ypred))
rmse = math.sqrt(mse)
r2 = r2_score(ytest, ypred)

# Plot RMSE & MSE as a bar chart
plt.figure(figsize=(6, 4))
plt.bar(["RMSE", "MSE"], [rmse, mse], color=["blue", "orange"])
plt.ylabel("Error Value")
plt.title("RMSE & MSE Comparison")
plt.show()

print("Mean Squared Errror (MSE): ", mse)
print("Root Mean Squared Error (RMSE): ", rmse)
print("RÂ² Score (Accuracy of Model): ", r2)
